<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:background="@drawable/selector_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvEnglish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="You make money by this!"/>

    <TextView
        android:id="@+id/tvChinese"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvEnglish"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="中文翻译"/>

    <Button
        android:id="@+id/imBtnSound"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvChinese"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+"
        style="?attr/materialButtonOutlinedStyle"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imBtnSound"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/background_dark"/>

</androidx.constraintlayout.widget.ConstraintLayout>